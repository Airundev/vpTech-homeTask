<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.vp.favorites.viewmodel.FavoritesActivityModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FavoritesActivity">

    <TextView
        android:id="@+id/favorites_txv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorites_error_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/favorites_pgb_movies"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/favorites_pgb_size"
        android:layout_height="@dimen/favorites_pgb_size"
        app:layout_constraintBottom_toBottomOf="@+id/favorties_srl_movies"
        app:layout_constraintEnd_toEndOf="@+id/favorties_srl_movies"
        app:layout_constraintStart_toStartOf="@+id/favorties_srl_movies"
        app:layout_constraintTop_toTopOf="@+id/favorties_srl_movies" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/favorties_srl_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favorites_ryv_movies"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>